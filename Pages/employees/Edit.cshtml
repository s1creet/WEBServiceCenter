@page
@model ServiceCenter.Pages.employees.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактирование</h1>

<h4>Сотрудники</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Сотрудники.ПаспортныеДанные" class="control-label"></label>
                <input asp-for="Сотрудники.ПаспортныеДанные" class="form-control" />
                <span asp-validation-for="Сотрудники.ПаспортныеДанные" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Сотрудники.Телефон" class="control-label"></label>
                <input asp-for="Сотрудники.Телефон" class="form-control" />
                <span asp-validation-for="Сотрудники.Телефон" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Сотрудники.Адрес" class="control-label"></label>
                <input asp-for="Сотрудники.Адрес" class="form-control" />
                <span asp-validation-for="Сотрудники.Адрес" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Сотрудники.Пол" class="control-label"></label>
